<% layout('layouts/boilerplate') %>


<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Departments</h1>
    <a href="/departments/new" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Add New Department
    </a>
</div>

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% departments.forEach(department => { %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <div class="flex justify-between items-start mb-4">
                <h2 class="text-xl font-bold text-gray-800"><%= department.name %></h2>
                <div class="flex space-x-2">
                    <a href="/departments/<%= department._id %>/edit" class="text-blue-600 hover:text-blue-800">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                    </a>
                    <form method="POST" action="/departments/<%= department._id %>?_method=DELETE" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-800" 
                                onclick="return confirm('Are you sure you want to delete this department?')">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                        </button>
                    </form>
                </div>
            </div>
            
            <% if (department.description) { %>
                <p class="text-gray-600 mb-4"><%= department.description %></p>
            <% } %>
            
            <div class="space-y-2 text-sm">
                <% if (department.budget) { %>
                    <div class="flex justify-between">
                        <span class="text-gray-500">Budget:</span>
                        <span class="font-medium">$<%= department.budget.toLocaleString() %></span>
                    </div>
                <% } %>
                
                <% if (department.location) { %>
                    <div class="flex justify-between">
                        <span class="text-gray-500">Location:</span>
                        <span class="font-medium"><%= department.location %></span>
                    </div>
                <% } %>
            </div>
            
            <div class="mt-4 pt-4 border-t border-gray-200">
                <a href="/departments/<%= department._id %>" class="text-blue-600 hover:text-blue-800 font-medium">
                    View Details â†’
                </a>
            </div>
        </div>
    <% }) %>
</div>

<% if (departments.length === 0) { %>
    <div class="text-center py-12">
        <div class="text-gray-500 mb-4">
            <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No departments found</h3>
        <p class="text-gray-600 mb-4">Get started by creating your first department.</p>
        <a href="/departments/new" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
            Add New Department
        </a>
    </div>
<% } %>