<% layout('layouts/boilerplate') %>

<div class="max-w-2xl mx-auto text-center">
    <div class="bg-white rounded-lg shadow-md p-8">
        <div class="text-red-500 mb-4">
            <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
        </div>
        
        <h1 class="text-3xl font-bold text-gray-800 mb-4">Oops! Something went wrong</h1>
        
        <% if (error && error.message) { %>
            <p class="text-gray-600 mb-6"><%= error.message %></p>
        <% } else { %>
            <p class="text-gray-600 mb-6">We encountered an unexpected error. Please try again.</p>
        <% } %>
        
        <div class="space-x-4">
            <a href="javascript:history.back()" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">
                Go Back
            </a>
            <a href="/" class="bg-gray-600 text-white px-6 py-2 rounded hover:bg-gray-700">
                Home
            </a>
        </div>
    </div>
</div>